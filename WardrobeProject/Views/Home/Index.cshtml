@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron slideExpandUp">
        <h1>MVC First - Wardrobe Application</h1>
        <p>Web Application that manages the contents of your wardrobe. This app allows users to add, edit, view oe delete content.</p>
</div>





    
    <a class="fragment" onclick="Redirect(this);">

        <div>
            <span id="close">x</span>
            <img src="https://images.unsplash.com/photo-1503691096858-1856b5b151a4?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=130ab96998c6f42a84d924936c4ce2b7&auto=format&fit=crop&w=889&q=80" alt="Some Description" />
            <h3>View More Ideas Here</h3>
            <p class="text">View More Outfit Ideas Here.</p>
        </div>
    </a>

<div class="row">
 
   <div class="col-md-4 slideExpandUp">
        <h2>Men's</h2>
        <p>
            View or add men's clothing starting with shoes.
        </p>
        <a href='@Url.Action("Index", "MensShoes")' class="btn btn-default navbar-btn">Mens Shoe's &raquo;</a>
    </div>
    <div class="col-md-4 slideExpandUp">
        <h2>Women's</h2>
        <p>View or add women's clothing starting with shoes.</p>
        <a href='@Url.Action("Index", "WomensShoes")' class="btn btn-default navbar-btn">Womens Shoe's &raquo;</a>
    </div>
    <div class="col-md-4 slideExpandUp">
        <h2>Outfit's</h2>
        <p>View or create men's or women's outfits.</p>
        <a onmouseover="bigText(this);" onmouseout="normalText(this);" href='@Url.Action("Index", "MensOutfits")' class="btn btn-default navbar-btn" onclick="createMenOutfit();">Mens Outfit's &raquo;</a>
        <a onmouseover="bigText(this);" onmouseout="normalText(this);" href='@Url.Action("Index", "WomensOutfits")' class="btn btn-default navbar-btn" >Womens Outfit's &raquo;</a>
    </div>
</div>
